<h1>Edit User Details</h1>

<%= form_with model: @user,local: true do |f| %>
<div>
<%= f.label :name%> <br>
<%= f.text_field :name%>
</div>

<div>
<%= f.label :email%> <br>
<%= f.email_field :email %>
</div>
<br>
<%= f.submit class:"btn btn-outline-primary"%>

<% end %>
<br>
<%= link_to 'Update Password', edit_password_path, class:"btn btn-outline-primary" %>